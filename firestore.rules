
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /lists/{listId} {
      // Helper: check if user is owner or shared
      function isMember() {
        let list = get(/databases/$(database)/documents/lists/$(listId)).data;
        return request.auth != null && (request.auth.uid == list.ownerUid || request.auth.uid in list.sharedWith);
      }
      
      allow create: if request.auth != null;
      allow read: if isMember();
      
      // Allow joining via invite token
      allow update: if (isMember()) || 
        (request.auth != null && 
         request.resource.data.sharedWith.hasAll(resource.data.sharedWith) &&
         request.resource.data.sharedWith.size() == resource.data.sharedWith.size() + 1 &&
         request.auth.uid in request.resource.data.sharedWith);

      match /items/{itemId} {
        allow read, write: if isMember();
      }
    }
  }
}
