{
  "hosting": {
    "site": "shopping-list-218bd",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.js",
        "headers": [
          { "key": "Content-Type", "value": "application/javascript; charset=utf-8" }
        ]
      },
      {
        "source": "**/*.mjs",
        "headers": [
          { "key": "Content-Type", "value": "application/javascript; charset=utf-8" }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
